<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ButtonActivity">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ButNombreApellido" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.126"/>
    <Button
            android:text="Enviar intent explicito"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:id="@+id/butEnviarIntentImplicito"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTexto"
            app:layout_constraintStart_toStartOf="@+id/txtTexto" app:layout_constraintEnd_toEndOf="@+id/txtTexto"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text="Correo"
            android:ems="10"
            android:id="@+id/txtCorreo"
            app:layout_constraintStart_toStartOf="@+id/ButNombreApellido"
            app:layout_constraintEnd_toEndOf="@+id/ButNombreApellido" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/ButNombreApellido" app:layout_constraintHorizontal_bias="0.496"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Subject"
            android:ems="10"
            android:id="@+id/txtSubject"
            app:layout_constraintEnd_toEndOf="@+id/txtCorreo" app:layout_constraintStart_toStartOf="@+id/txtCorreo"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/txtCorreo"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Texto"
            android:ems="10"
            android:id="@+id/txtTexto" android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/txtSubject"
            app:layout_constraintEnd_toEndOf="@+id/txtSubject" app:layout_constraintStart_toStartOf="@+id/txtSubject"/>
    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier" app:barrierDirection="top"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="vertical"/>
</android.support.constraint.ConstraintLayout>